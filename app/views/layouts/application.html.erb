<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default" role="navigation">

        <div class="navbar-header">
          <a class="navbar-brand" href="#">Флэшкарточкер</a>
          <ul class="nav navbar-nav">
            <li><%= link_to "Главная", root_path %></li>
            <% if current_user %>
              <li><%= link_to "Все карточки", cards_path %></li>
              <li><%= link_to "Добавить карточку", new_card_path %></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
              <li><%= link_to "Logout", logout_path, method: :delete %></li>
              <li><%= link_to "Добавить колоду", new_pack_path %></li>
              <li><%= link_to "Все колоды", packs_path %></li>

            <% else %>
              <li><%= link_to "Register", new_user_path %></li>
              <li><%= link_to "Login", login_path %></li>
              <li><%= link_to 'Login with VK', auth_at_provider_path(:provider => :vk) %></li>
              <li><%= link_to 'Login with Google', auth_at_provider_path(:provider => :google) %></li>
            <% end %>
          </ul>
        </div>
        <% if current_user %>
          <div>
            <p class="navbar-text navbar-right">Signed in as
              <a href="#" class="navbar-link"><%= current_user.name %></a>
            </p>
          </div>
        <% end %>

      </nav>
    </header>

    <section>
      <%= yield %>
    </section>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

  </body>
</html>
