<%= simple_form_for @card do |f| %>
<% if @card.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@card.errors.count, "error") %>
      prohibited this card from being saved:
    </h2>
    <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>
  <%= f.input :original_text, hint: 'in English' %>
</p>

<p>
  <%= f.input :translated_text, hint: 'in Russian' %>
</p>
<p>
  <%= f.button :submit, class: "btn btn-large btn-primary"%>
</p>
<% end %>
