<% provide(:title, 'Все колоды') %>
<h1>Все колоды</h1>

  <table class="table table-striped">
    <caption>Все колоды</caption>

    <thead>
      <tr>
        <th>Название</th>
        <th>Текущая</th>
        <th>Количество карточек</th>
        <th>Перейти</th>
        <th>Редактировать</th>
        <th>Удалить</th>
      </tr>
    </thead>

    <tbody>
      <% @packs.each do |pack| %>
        <tr>
          <td><%= pack.name %></td>
          <td><%= pack.current %></td>
          <td><%= pack.cards.count %></td>
          <td><%= link_to "show", pack_path(pack) %></td>
          <td><%= link_to "edit", edit_pack_path(pack) %></td>
          <td><%= link_to "delete", pack_path(pack), method: :delete, data: { confirm:
            "You sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
