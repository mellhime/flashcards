<% provide(:title, 'All packs') %>
<h1><%= t '.all_packs' %></h1>
  <table class="table table-striped">
  
    <thead>
      <tr>
        <th><%= t '.name' %></th>
        <th><%= t '.count' %></th>
        <th><%= t '.show' %></th>
        <th><%= t '.edit' %></th>
        <th><%= t '.delete' %></th>
      </tr>
    </thead>

    <tbody>
      <% @packs.each do |pack| %>
        <tr>
          <td><%= pack.name %></td>
          <td><%= pack.cards.count %></td>
          <td><%= link_to "#{t '.show'}", dashboard_pack_path(pack) %></td>
          <td><%= link_to "#{t '.edit'}", edit_dashboard_pack_path(pack) %></td>
          <td><%= link_to "#{t '.delete'}", dashboard_pack_path(pack), method: :delete, data: { confirm:
            "#{t '.confirmation'}" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
